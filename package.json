{
  "name": "@oyfora/ionic-dnd",
  "version": "1.0.0",
  "description": "A drag and drop library for Ionic React with auto-scroll support, designed for Capacitor apps",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@ionic/react": ">=7.0.0",
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "devDependencies": {
    "@capacitor/haptics": "^8.0.0",
    "@ionic/react": "^8.0.0",
    "@types/node": "^25.2.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "ionic",
    "react",
    "drag-and-drop",
    "dnd",
    "sortable",
    "capacitor",
    "mobile",
    "auto-scroll",
    "tailwind"
  ],
  "author": "Oyfora",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FloWachter/ionic-dnd"
  }
}
